<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head.ejs') %>
  <%- include('./components/header.ejs') %>

<body>
  <div>
    <script>
      function add() {
        let json = {
          name :document.getElementById("name").value,
          lastname :document.getElementById("lastname").value,
          status :document.getElementById("status").value,
          institution :document.getElementById("institution").value,
          department :document.getElementById("department").value,
          faculty :document.getElementById("faculty").value,
          degree: document.getElementById("degree").value,
          position: document.getElementById("position").value,
          group: document.getElementById("group").value,
          startRegistration : document.getElementById("startRegistration").value,
          endRegistration: document.getElementById("endRegistration").value
      }
        fetch('/addReader', {
                method: "POST",
                headers: { 'Content-Type': "application/json;charset=UTF-8" },
                body: JSON.stringify(json)
            }).then(()=>{let root = document.querySelector('div');
            root.innerHTML = `<h1>Успешно</h1>`})
    }
    </script>
  <h1>Добавить читателя:</h1>
      <label>Имя
        <input type="text" id="name">
      </label><br><br>
      <label>Фамилия
        <input type="text" id="lastname">
      </label><br><br>
      <label>Статус
        <input type="text" id="status">
      </label><br><br>
      <label>Институт
        <input type="text" id="institution">
      </label><br><br>
      <label>Факультет
        <input type="text" id="faculty">
      </label><br><br>
      <label>Кафедра
        <input type="text" id="department">
      </label><br><br>
      <label>Ученая степень
        <input type="text" id="degree">
      </label><br><br>
      <label>Должность
        <input type="text" id="position">
      </label><br><br>
      <label>Группа
        <input type="text" id="group">
      </label><br><br>
      <label>Начало регистрации
        <input type="date" id="startRegistration">
      </label><br><br>
      <label>Конец регистрации
        <input type="date" id="endRegistration">
      </label><br><br>
      <input type="button" value="Добавить" onclick="add()">
  </div>
</body>
</html>